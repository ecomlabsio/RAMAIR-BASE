<link rel="stylesheet" href="{{ 'component-ramair-reviews.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-ramair-reviews.css' | asset_url | stylesheet_tag }}</noscript>

{% liquid
    assign container = section.settings.container

    assign mg_top_desktop = section.settings.mg_top_desktop
    assign mg_top_tablet = section.settings.mg_top_tablet
    assign mg_top_mobile = section.settings.mg_top_mobile

    assign mg_bottom_desktop = section.settings.mg_bottom_desktop
    assign mg_bottom_tablet = section.settings.mg_bottom_tablet
    assign mg_bottom_mobile = section.settings.mg_bottom_mobile

    assign container = section.settings.container | replace: 'fullwidth', 'full'
    if container == 'container'
        assign container = 'container'
    else
        assign container = 'container-' | append: container
    endif

    assign heading = section.settings.heading
%}

<style>
    .ramair-reviews-section-{{section.id}} {
        background: {% if section.settings.background_gradient != blank %}{{ section.settings.background_gradient }}{% else %}{{ section.settings.background }}{% endif %};
    }
    .ramair-reviews-section-{{section.id}} .ramair-reviews-carousel {
        --scroll-speed: {{ section.settings.scroll_speed }}s;
    }
    .ramair-reviews-section-{{section.id}} .star-rating svg {
        fill: {{ section.settings.star_color }};
    }
    .ramair-reviews-section-{{section.id}} .review-name {
        color: {{ section.settings.name_color }};
    }
    .ramair-reviews-section-{{section.id}} .review-text {
        color: {{ section.settings.text_color }};
    }
    .ramair-reviews-section-{{section.id}} .section-heading {
        color: {{ section.settings.heading_color }};
    }
    @media (max-width: 767px) {
        .ramair-reviews-section-{{section.id}} {
            padding-top: {{ mg_top_mobile | append: 'px' }};
            padding-bottom: {{ mg_bottom_mobile | append: 'px' }}
        }
    }
    @media (min-width: 768px) and (max-width: 1199px) {
        .ramair-reviews-section-{{section.id}} {
            padding-top: {{ mg_top_tablet | append: 'px' }};
            padding-bottom: {{ mg_bottom_tablet | append: 'px' }}
        }
    }
    @media (min-width: 1200px) {
        .ramair-reviews-section-{{section.id}} {
            padding-top: {{ mg_top_desktop | append: 'px' }};
            padding-bottom: {{ mg_bottom_desktop | append: 'px' }}
        }
    }
</style>

<div class="ramair-reviews-section ramair-reviews-section-{{section.id}}" data-loader-script="{{ 'ramair-reviews.js' | asset_url }}">
    <div class="{{ container }}">
        {%- if heading != blank -%}
            <div class="halo-block-header text-{{ section.settings.content_align }}">
                <h3 class="section-heading{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
                    <span class="text">{{ heading }}</span>
                </h3>
            </div>
        {%- endif -%}

        <ramair-reviews-carousel>
            <div class="ramair-reviews-carousel">
                <div class="ramair-reviews-track">
                    {% for block in section.blocks %}
                        <div class="review-card" {{ block.shopify_attributes }}>
                            <div class="star-rating">
                                {% for i in (1..block.settings.star_rating) %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 28 26" fill="none">
