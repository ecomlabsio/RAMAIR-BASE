{{ 'component-header-simple.css' | asset_url | stylesheet_tag }}
<header class="header header-minimal-logo">
  <div class="header-simple__item" style="--bg-color: {% if section.settings.background_gradient != blank %}{{ section.settings.background_gradient }}{% else %}{{ section.settings.background_color }}{% endif %}; --p-top: {{ section.settings.padding_top }}px; --p-bottom: {{ section.settings.padding_bottom }}px; text-align: {{ section.settings.logo_alignment }};">
    <div class="container container-{{ section.settings.container }}">
      <div class="header__logo clearfix" style="--logo-width: {% if section.settings.logo == blank %}auto; --logo-svg-width: {% endif %}{{ section.settings.logo_width }}px; --color: {{ section.settings.text_color }};">
        <{% if request.page_type == 'index' %}h1{% else %}div{% endif %} class="header__heading">
          <a href="{{ routes.root_url }}" class="header__heading-link focus-inset">
            {%- if section.settings.logo != blank -%}
              {%- liquid
                assign logo = section.settings.logo
                assign logo_width = section.settings.logo_width
                assign logo_height = logo_width | divided_by: logo.aspect_ratio | round
                assign logo_alt = logo.alt | default: shop.name | escape
              -%}
              {{ logo | image_url: width: 300 | image_tag:
                class: 'header__heading-logo motion-reduce',
                widths: '50, 60, 70, 80, 90, 100, 110, 120, 130, 140, 150, 160, 170, 180, 190, 200, 210, 220, 230, 240, 250, 260, 270, 280, 290, 300',
                height: logo_height,
                width: logo_width,
                alt: logo_alt
              }}
            {%- else -%}
              <span class="h2" style="color: {{ section.settings.text_color }};">{{ shop.name }}</span>
            {%- endif -%}
          </a>
        </{% if request.page_type == 'index' %}h1{% else %}div{% endif %}>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header - Minimal Logo",
  "limit": 1,
  "class": "section-header-minimal-logo",
  "settings": [
    {
      "type": "paragraph",
      "content": "Simple header with only logo and alignment controls"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container width",
      "default": "1170",
      "options": [
        {
          "value": "1170",
          "label": "1170px"
        },
        {
          "value": "1370",
          "label": "1370px"
        },
        {
          "value": "1470",
          "label": "1470px"
        },
        {
          "value": "1570",
          "label": "1570px"
        },
        {
          "value": "1770",
          "label": "1770px"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo width",
      "default": 150
    },
    {
      "type": "select",
      "id": "logo_alignment",
      "label": "Logo alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient",
      "info": "If set, this will override the background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000",
      "info": "Used for shop name when no logo is uploaded"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Header - Minimal Logo"
    }
  ]
}
{% endschema %}
