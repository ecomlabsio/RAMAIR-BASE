{{ 'component-header-simple.css' | asset_url | stylesheet_tag }}
<header class="header header-minimal-logo" style="min-height: {{ section.settings.min_height }}px;">
  <div class="header-simple__item" style="--bg-color: {% if section.settings.background_gradient != blank %}{{ section.settings.background_gradient }}{% else %}{{ section.settings.background_color }}{% endif %}; --p-top: {{ section.settings.padding_top }}px; --p-bottom: {{ section.settings.padding_bottom }}px; text-align: {{ section.settings.logo_alignment }}; display: flex; align-items: center;">
    <div class="container container-{{ section.settings.container }}" style="width: 100%;">
      <div class="header__logo clearfix" style="--logo-width: {% if section.settings.logo == blank %}auto; --logo-svg-width: {% endif %}{{ section.settings.logo_width }}px; --color: {{ section.settings.text_color }}; width: {{ section.settings.logo_width }}px; display: inline-block;">
        <{% if request.page_type == 'index' %}h1{% else %}div{% endif %} class="header__heading">
          <a href="{{ routes.root_url }}" class="header__heading-link focus-inset">
            {%- if section.settings.logo != blank -%}
              {%- liquid
                assign logo = section.settings.logo
                assign logo_width = section.settings.logo_width
                assign logo_height = logo_width | divided_by: logo.aspect_ratio | round
                assign logo_alt = logo.alt | default: shop.name | escape
              -%}
              <img
                src="{{ logo | image_url: width: 300 }}"
                srcset="{{ logo | image_url: width: 50 }} 50w, {{ logo | image_url: width: 60 }} 60w, {{ logo | image_url: width: 70 }} 70w, {{ logo | image_url: width: 80 }} 80w, {{ logo | image_url: width: 90 }} 90w, {{ logo | image_url: width: 100 }} 100w, {{ logo | image_url: width: 110 }} 110w, {{ logo | image_url: width: 120 }} 120w, {{ logo | image_url: width: 130 }} 130w, {{ logo | image_url: width: 140 }} 140w, {{ logo | image_url: width: 150 }} 150w, {{ logo | image_url: width: 160 }} 160w, {{ logo | image_url: width: 170 }} 170w, {{ logo | image_url: width: 180 }} 180w, {{ logo | image_url: width: 190 }} 190w, {{ logo | image_url: width: 200 }} 200w, {{ logo | image_url: width: 210 }} 210w, {{ logo | image_url: width: 220 }} 220w, {{ logo | image_url: width: 230 }} 230w, {{ logo | image_url: width: 240 }} 240w, {{ logo | image_url: width: 250 }} 250w, {{ logo | image_url: width: 260 }} 260w, {{ logo | image_url: width: 270 }} 270w, {{ logo | image_url: width: 280 }} 280w, {{ logo | image_url: width: 290 }} 290w, {{ logo | image_url: width: 300 }} 300w"
                sizes="(min-width: 1025px) {{ logo_width }}px, 100vw"
                alt="{{ logo_alt }}"
                class="header__heading-logo motion-reduce"
                width="{{ logo_width }}"
                height="{{ logo_height }}"
                style="max-width: 100%; height: auto; display: block;"
                loading="lazy"
              >
            {%- else -%}
              <span class="h2" style="color: {{ section.settings.text_color }};">{{ shop.name }}</span>
            {%- endif -%}
          </a>
        </{% if request.page_type == 'index' %}h1{% else %}div{% endif %}>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header - Minimal Logo",
  "limit": 1,
  "class": "section-header-minimal-logo",
  "settings": [
    {
      "type": "paragraph",
      "content": "Simple header with only logo and alignment controls"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container width",
      "default": "1170",
      "options": [
        {
          "value": "1170",
          "label": "1170px"
        },
        {
          "value": "1370",
          "label": "1370px"
        },
        {
          "value": "1470",
          "label": "1470px"
        },
        {
          "value": "1570",
          "label": "1570px"
        },
        {
          "value": "1770",
          "label": "1770px"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo width",
      "default": 150
    },
    {
      "type": "select",
      "id": "logo_alignment",
      "label": "Logo alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient",
      "info": "If set, this will override the background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000",
      "info": "Used for shop name when no logo is uploaded"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Minimum header height",
      "default": 80,
      "info": "Sets the minimum height of the header. Logo will be vertically centered."
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Header - Minimal Logo"
    }
  ]
}
{% endschema %}
