{% doc %}
  @prompt
    An image that pulses like a heartbeat
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-heartbeat-image-{{ ai_gen_id }} {
    position: relative;
    display: block;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-heartbeat-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-heartbeat-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-heartbeat-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-heartbeat-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-heartbeat-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.enable_pulse %}
    .ai-heartbeat-image-wrapper-{{ ai_gen_id }} {
      animation: ai-heartbeat-pulse-{{ ai_gen_id }} {{ block.settings.pulse_speed }}s ease-in-out infinite;
    }

    @keyframes ai-heartbeat-pulse-{{ ai_gen_id }} {
      0% {
        transform: scale(1);
      }
      14% {
        transform: scale({{ block.settings.pulse_scale_1 }});
      }
      28% {
        transform: scale(1);
      }
      42% {
        transform: scale({{ block.settings.pulse_scale_2 }});
      }
      70% {
        transform: scale(1);
      }
      100% {
        transform: scale(1);
      }
    }
  {% endif %}

  {% if block.settings.enable_shadow %}
    .ai-heartbeat-image-wrapper-{{ ai_gen_id }} {
      box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-heartbeat-image-{{ ai_gen_id }} {
      max-width: 100%;
    }
    
    .ai-heartbeat-placeholder-{{ ai_gen_id }} {
      height: 250px;
    }
  }
{% endstyle %}

<div
  class="ai-heartbeat-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-heartbeat-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      {% if block.settings.link_url != blank %}
        <a href="{{ block.settings.link_url }}">
          <img
            src="{{ block.settings.image | image_url: width: 2000 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        </a>
      {% else %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% endif %}
    {% else %}
      <div class="ai-heartbeat-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-heartbeat-empty-state-{{ ai_gen_id }}">
          Add an image to see the heartbeat effect
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heartbeat image",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 200,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 600
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Heartbeat animation"
    },
    {
      "type": "checkbox",
      "id": "enable_pulse",
      "label": "Enable heartbeat pulse",
      "default": true
    },
    {
      "type": "range",
      "id": "pulse_speed",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "unit": "s",
      "label": "Pulse speed",
      "default": 2
    },
    {
      "type": "range",
      "id": "pulse_scale_1",
      "min": 1,
      "max": 1.5,
      "step": 0.1,
      "label": "First pulse scale",
      "default": 1.1
    },
    {
      "type": "range",
      "id": "pulse_scale_2",
      "min": 1,
      "max": 1.5,
      "step": 0.1,
      "label": "Second pulse scale",
      "default": 1.2
    },
    {
      "type": "header",
      "content": "Shadow"
    },
    {
      "type": "checkbox",
      "id": "enable_shadow",
      "label": "Enable shadow",
      "default": true
    },
    {
      "type": "range",
      "id": "shadow_vertical",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Shadow vertical offset",
      "default": 8
    },
    {
      "type": "range",
      "id": "shadow_blur",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Shadow blur",
      "default": 16
    },
    {
      "type": "range",
      "id": "shadow_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Shadow opacity",
      "default": 0.2
    }
  ],
  "presets": [
    {
      "name": "Heartbeat image"
    }
  ]
}
{% endschema %}